upstream backend {
    server api:8000;
    keepalive 32;                 # 업스트림 keepalive로 커넥션 재활용
}

server {
    listen 80;
    server_name _;
    client_max_body_size 100m;    # 업로드 최대 크기 (필요 시 조절)
    server_tokens off;

    # ---- /static/masked/* → /upload/masked/* (다운로드 링크 정리)
    location ~ ^/static/masked/(.+)$ {
        return 302 /upload/masked/$1;
    }

    # ---- /upload 접두사(슬래시 유무 모두 허용)
    location = /upload {
        return 301 /upload/;
    }

    # 실제 업로드/다운로드 라우트
    location ^~ /upload/ {
        proxy_pass http://backend;                 # 원본 URI 유지 (/upload/... 그대로)
        proxy_http_version 1.1;
        proxy_set_header Connection "";            # keep-alive 유지
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 업로드/스트리밍 안정화
        proxy_request_buffering off;               # 큰 파일 업로드에 유리
        proxy_buffering off;                       # 스트리밍 응답 지연 최소화
        add_header X-Accel-Buffering no always;    # 일부 프록시에서 추가 버퍼링 방지

        # 타임아웃: gunicorn timeout(예: 180~300s)과 맞추기
        proxy_connect_timeout 5s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
    }

    # ---- /api/
    location ^~ /api/ {
        proxy_pass http://backend;        # /api/... 경로 유지 (Flask 블루프린트와 일치)
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 오래 걸리는 API 대비 타임아웃
        proxy_connect_timeout 5s;
        proxy_send_timeout 180s;
        proxy_read_timeout 180s;
    }

    # ---- 나머지 모든 경로는 Flask로 넘기기 ----
    location / {
        proxy_pass http://backend;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # ---- 업스트림 에러 표준화(선택)
    error_page 502 503 504 /_upstream_error.json;
    location = /_upstream_error.json {
        default_type application/json;
        return 200 '{"ok":false,"error":"upstream_timeout"}';
    }

    # (선택) 잡음 줄이기
    # log_not_found off;
}

